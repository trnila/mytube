{block content}
<h1>
	{if isset($info['displayName'])}
		{$info['displayName']} <span n:class="muted" n:if="$profile->nickname != $info['displayName']">({$profile->nickname})</span>
	{else}
		{$profile->nickname}
	{/if}
</h1>

<script src="https://maps.googleapis.com/maps/api/js?sensor=true"></script>
<div class="row" id="profile-informations">
	<div class="span3">
		<img src="https://www.gravatar.com/avatar/{md5($profile->email)}?s=300">

		<ul n:ifset="$info['phoneNumbers']" n:inner-foreach="$info['phoneNumbers'] as $phone" class="unstyled">
			<li><i class="icon-phone"></i> {$phone['value']}</li>
		</ul>

		<ul n:ifset="$info['emails']" n:inner-foreach="$info['emails'] as $email" class="unstyled">
			<li><i class="icon-envelope"></i> {$email['value']}
		</ul>

		<ul n:ifset="$info['ims']" n:inner-foreach="$info['ims'] as $im">
			<li>{$im['type']} {$im['value']}</li>
		</ul>
	</div>

	<div class="span9">
		{ifset $info['aboutMe']}{!$info['aboutMe']}{/ifset}

 		<div n:ifset="$info['currentLocation']" id="map" data-map-location="{$info['currentLocation']}" data-map-marker="https://www.gravatar.com/avatar/{? echo md5($profile->email)}?s=25"></div>
	</div>
</div>


<h2>UÅ¾ivatelovy videa</h2>
{include ../_videos.latte, videos => $myVideos}

<h2>Lajknuta videa</h2>
{include ../_videos.latte, videos => $likedVideos}